130 - 3 127 seats available recliner = 0

"""

total_seats = 150
normal_remaining_seats = 130
recliner_remaining_seats = 20
normal_seats_price =250
recliner_price = 380

while True:
    amount_normal = 0
    amount_recliner = 0
    print("WELCOME TO ENTRY IN THREATER")
    

    name=input("enter your name")
    ph_no=int(input("enter your phone number"))
    abc=input("what type of seats do you want ??(normal/recliner)")
    
    while True:
        if abc=="normal":
            ABC=int(input("how many seats do you want??"))
            
        if ABC<=normal_remaining_seats:
            amount_normal+= ABC*normal_seats_price
            normal_remaining_seats -= ABC
            print(amount_normal)
            print("book fast few seats left",normal_remaining_seats)
            
        else:
            print("Soory!seats are not avialble")
                
        if abc=="recliner":
            ABC=int(input("how many seats do you want ??"))

                    
        if ABC<=recliner_remaining_seats:
            amount_recliner += ABC* recliner_price
            recliner_remaining_seats -= ABC
            print(amount_recliner)
            print("book fast few seats left", recliner_remaining_seats)
                        
            repeat=input("Do you want add more seats??(yes/no)")
            if repeat=="no" or repeat=="NO"or repeat=="No":
                break
            
                  
                            
                            
                            
        
    
    
